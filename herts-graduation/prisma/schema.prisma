generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Users table - represents graduates who can register guests
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  maxGuests Int      @default(50)
  createdAt DateTime @default(now()) 
  role          UserRole  @default(STUDENT) 
  // Relationships
  guests    Guest[]  // One user can have many guests
  graduate Graduate?
  
  @@map("users")
}

// Guests table - people the graduates are bringing
model Guest {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  governmentId   String   // Government ID number
  idImageUrl     String   // S3 URL for government ID photo
  phoneNumber    String
  email          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // Foreign keys
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Relationships
  qrCode         QRCode?  // One guest has one QR code
  
  @@map("guests")
}

// QR Codes table - for entry management
model QRCode {
  id        String     @id @default(uuid())
  code      String     @unique
  status    QRStatus   @default(VALID)
  type QRCodeType @default(GUEST)
  scannedAt DateTime?  
  createdAt DateTime   @default(now())
  
  // Foreign keys
  guestId   String?     @unique // One-to-one with guest
  guest     Guest?      @relation(fields: [guestId], references: [id], onDelete: Cascade)

  graduateId String? @unique  
  graduate Graduate? @relation(fields: [graduateId], references: [id], onDelete: Cascade)
  
  @@map("qr_codes")
}

model Graduate {
  id String @id @default(uuid())
  name String
  major String
  dateOfBirth DateTime
  gafIdNumber String
  governmentId String
  idImageUrl String // S3 URL for government ID photo
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  userId String @unique // One graduate per user
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  qrCode         QRCode?

  @@map("graduates")
}

// Enum for QR code status
enum QRStatus {
  VALID   
  USED  
}

enum UserRole {
  STUDENT
  ADMIN
}

enum QRCodeType {
  GUEST
  GRADUATE
}